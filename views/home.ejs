<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LearnPulse - Online Learning Hub</title>
    <!-- Google Fonts - Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0a0a1c;
            color: #ffffff;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .search-section {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

        .search-input {
            width: 100%;
            max-width: 500px;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: #ffffff;
            font-size: 1rem;
            outline: none;
            transition: box-shadow 0.3s ease;
        }

        .search-input:focus {
            box-shadow: 0 0 8px rgba(124, 58, 237, 0.5);
        }

        .search-input::placeholder {
            color: #9ca3af;
        }

        .search-button, .update-button {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            background: linear-gradient(to right, #db2777, #dc2626);
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            margin: 10px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .search-button:hover, .update-button:hover {
            background: linear-gradient(to right, #be185d, #b91c1c);
            transform: translateY(-2px);
        }

        .success-message {
            display: none;
            background: linear-gradient(45deg, #34d399, #6ee7b7);
            color: #111827;
            padding: 12px;
            border-radius: 8px;
            margin: 20px auto;
            text-align: center;
            font-size: 1rem;
            font-weight: 500;
            max-width: 500px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

        .success-message.show {
            display: block;
        }

        .courses-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding-bottom: 40px;
        }

        .course-card {
            background: linear-gradient(135deg, #1f2937, #111827);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
            flex: 1 1 300px;
            max-width: 420px;
        }

        .course-card:hover {
            transform: translateY(-5px);
        }

        .course-image {
            max-width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
            border: 1px solid rgba(236, 72, 153, 0.2);
        }

        .course-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #f472b6;
            margin-bottom: 10px;
        }

        .course-description {
            font-size: 1rem;
            color: #d1d5db;
            margin-bottom: 15px;
        }

        .course-price {
            font-size: 1rem;
            color: #d1d5db;
            margin-bottom: 10px;
        }

        .course-date {
            font-size: 1rem;
            color: #d1d5db;
            margin-bottom: 15px;
        }

        .course-link {
            display: inline-block;
            padding: 10px 20px;
            background: linear-gradient(to right, #db2777, #dc2626);
            color: #ffffff;
            font-weight: 600;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .course-link:hover {
            background: linear-gradient(to right, #be185d, #b91c1c);
            transform: translateY(-2px);
        }

        .hidden {
            display: none;
        }

        @media (max-width: 768px) {
            .brand-title {
                font-size: 2rem;
            }

            .brand-subtitle {
                font-size: 1rem;
            }

            .search-section {
                flex-direction: column;
            }

            .search-button, .update-button {
                margin: 10px 0;
            }

            .course-card {
                flex: 1 1 100%;
                max-width: 100%;
            }
        }

        /* Telegram Popup Styles */
        .popup-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 1px solid #3e3e3e;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .popup-content {
            position: relative;
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            color: white;
        }

        .glassmorphism-box {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px) saturate(180%);
            -webkit-backdrop-filter: blur(10px) saturate(180%);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
        }

        .close-btn {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 30px;
            cursor: pointer;
            color: white;
            transition: color 0.3s ease;
        }

        .close-btn:hover {
            color: #ff4d4d;
        }
        .telegram-icon {
          position: fixed;
          bottom: 20px;
          right: 20px;
          width: 60px;
          height: 60px;
            z-index:100;
          border-radius: 100px;
          overflow: hidden;
        }

        .telegram-icon a {
          display: block;
          text-decoration: none;
        }

        .telegram-icon img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 100px;
        }
        .glassmorphism-box h2 {
            font-size: 2.5em;
            margin-bottom: 30px;
            
                  background: linear-gradient(135deg, #ff6a00, #ee0979, #8e2de2);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 0 15px rgba(138, 43, 226, 0.5);
        }

        .telegram-links-container {
            display: flex;
            flex-direction: row;
            gap: 40px;
            margin-top: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .telegram-link-item {
            backdrop-filter: blur(8px) saturate(150%);
            -webkit-backdrop-filter: blur(8px) saturate(150%);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            padding: 25px 35px;
            box-shadow: 0 4px 15px 0 rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform 0.3s ease, background 0.3s ease;
            min-width: 200px;
        }

        .telegram-link-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.15);
        }

        .telegram-link-item h3 {
            font-size: 1.8em;
            margin-bottom: 20px;
             background: radial-gradient(circle at center, #00f5a0, #00d9f5, #0084ff);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 0 10px rgba(0, 191, 255, 0.4);
        }

        .join-now-btn {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(135deg, #007bff, #00bfff);
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: bold;
            font-size: 1.1em;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.4);
        }

        .join-now-btn:hover {
            background: linear-gradient(135deg, #00bfff, #007bff);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.6);
        }

        .join-now-btn i {
            margin-right: 8px;
            font-size: 1.3em;
        }

        @media (max-width: 768px) {
            .telegram-links-container {
                flex-direction: column;
                gap: 25px;
            }

            .glassmorphism-box {
                padding: 30px;
                margin: 0 15px;
            }

            .glassmorphism-box h2 {
                font-size: 2em;
            }

            .telegram-link-item {
                padding: 20px 25px;
            }
        }
    </style>
</head>
<body>
    <!-- Brand Section -->
    <div class="learnpulse-brand" style="position: relative; text-align: center; padding: 30px 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%); margin-bottom: 20px; border-radius: 20px; box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3), inset 0 1px 0 rgba(255,255,255,0.2); overflow: hidden;">
        <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(circle at 30% 20%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 70% 80%, rgba(255,255,255,0.08) 0%, transparent 50%); pointer-events: none;"></div>
        <div style="position: relative; z-index: 2;">
            <h1 style="color: white; font-size: 3em; margin: 0; text-shadow: 2px 2px 8px rgba(0,0,0,0.3); font-weight: 700; letter-spacing: -1px;">LearnPulse</h1>
            <div style="width: 60px; height: 3px; background: linear-gradient(90deg, #fff, rgba(255,255,255,0.5)); margin: 15px auto; border-radius: 2px;"></div>
            <p style="color: rgba(255,255,255,0.95); margin: 0; font-size: 1.2em; font-weight: 300; letter-spacing: 0.5px;">Your Learning Journey Starts Here</p>
        </div>
    </div>
    <div class="telegram-icon">
        <a href="https://t.me/yourusername" target="_blank">
          <img src="https://upload.wikimedia.org/wikipedia/commons/8/82/Telegram_logo.svg" alt="Telegram Logo">
        </a>
      </div>
    <!-- Main Content -->
    <main class="container">
        <!-- Search and Update Section -->
        <div class="search-section">
            <input type="text" id="searchInput" placeholder="Search courses..." class="search-input">
            <button onclick="searchCourses()" class="search-button">Search</button>
            <button onclick="updateCourses()" class="update-button">Update Now</button>
        </div>
        <div id="successMessage" class="success-message">Courses updated successfully!</div>

        <!-- Courses Grid -->
        <div class="courses-grid">
            <div class="course-card">
                <img src="https://i.postimg.cc/pVKv3cLR/667423824369-IMG-9619.png" alt="Abhay 2025" class="course-image">
                <h2 class="course-title">Abhay 2025</h2>
                <p class="course-description">A foundational course for science enthusiasts to kickstart their learning journey.</p>
                <p class="course-price">Price: Free</p>
                <p class="course-date">Launch Date: January 1, 2025</p>
                <a href="./abhay" class="course-link">Explore</a>
            </div>
            <div class="course-card">
                <img src="https://theeduverse.xyz/images/IMG_20250225_201659_071.jpg" alt="Arrambh 2025" class="course-image">
                <h2 class="course-title">Arrambh 2025</h2>
                <p class="course-description">Begin your academic journey with this introductory science course.</p>
                <p class="course-price">Price: Free</p>
                <p class="course-date">Launch Date: January 1, 2025</p>
                <a href="./aarambh" class="course-link">Explore</a>
            </div>
            <div class="course-card">
                <img src="https://theeduverse.xyz/images/IMG_20250225_201659_071.jpg" alt="Aarambh 10th 2026" class="course-image">
                <h2 class="course-title">Aarambh 10th 2026</h2>
                <p class="course-description">Comprehensive science curriculum for 10th-grade students preparing for exams.</p>
                <p class="course-price">Price: Free</p>
                <p class="course-date">Launch Date: January 1, 2026</p>
                <a href="./10" class="course-link">Explore</a>
            </div>
            <div class="course-card">
                <img src="https://dxixtlyravvxx.cloudfront.net/540/admin_v1/bundle_management/course/707679428609_11th%20prarambh%20sci%20app%20with%20eng.jpg" alt="Prarambh Science 2026" class="course-image">
                <h2 class="course-title">Prarambh Science 2026</h2>
                <p class="course-description">Advanced science course for 11th-grade students, covering key scientific concepts.</p>
                <p class="course-price">Price: Free</p>
                <p class="course-date">Launch Date: January 1, 2026</p>
                <a href="./11" class="course-link">Explore</a>
            </div>
            <div class="course-card">
                <img src="https://dxixtlyravvxx.cloudfront.net/540/admin_v1/bundle_management/course/695788128610_11th%20prarambh%20comm%20app%20with%20eng.jpg" alt="Prarambh Commerce 2026" class="course-image">
                <h2 class="course-title">Prarambh Commerce 2026</h2>
                <p class="course-description">Foundational commerce course exploring economics and business principles.</p>
                <p class="course-price">Price: Free</p>
                <p class="course-date">Launch Date: January 1, 2026</p>
                <a href="./11eco" class="course-link">Explore</a>
            </div>
        </div>
    </main>

    <!-- Telegram Popup -->
    <div id="telegramPopup" class="popup-overlay">
        <div class="popup-content">
            <div class="glassmorphism-box">
                <span class="close-btn" onclick="document.getElementById('telegramPopup').style.display='none';">&times;</span>
                <h2>Telegram</h2>
                <div class="telegram-links-container">
                    <div class="telegram-link-item">
                        <h3>Study Blaze</h3>
                        <a href="https://t.me/studyblaze" target="_blank" class="join-now-btn">
                            <i class="fab fa-telegram-plane"></i> Join Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Function to filter courses based on search input
        function searchCourses() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.course-card');
            cards.forEach(card => {
                const title = card.querySelector('.course-title').textContent.toLowerCase();
                const description = card.querySelector('.course-description').textContent.toLowerCase();
                if (title.includes(input) || description.includes(input)) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }

        // Function to send POST request to /scrape route
        async function updateCourses() {
            try {
                const response = await fetch('/scrape', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const successMessage = document.getElementById('successMessage');
                if (response.status === 200) {
                    successMessage.classList.add('show');
                    setTimeout(() => {
                        successMessage.classList.remove('show');
                    }, 10000);
                    console.log("Courses updated");
                } else {
                    throw new Error('Failed to update courses');
                }
            } catch (error) {
                console.error('Error updating courses:', error);
                alert('Failed to update courses. Please try again.');
            }
        }

        // Real-time search
        document.getElementById('searchInput').addEventListener('input', searchCourses);

        // Telegram popup functionality
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.getElementById('telegramPopup').style.display = 'flex';
            }, 10000);
        });
    </script>
</body>
</html>